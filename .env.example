# Environment Variables - PostgreSQL Configuration
# Copy this to .env and fill in your values
# IMPORTANT: Add .env to .gitignore before committing!

# PostgreSQL Database Configuration
DB_NAME=app_db
DB_USER=app_user
DB_PASSWORD=secure_password_change_me_12345
DB_HOST=db
DB_PORT=5432

# Django Configuration
DEBUG=False
ALLOWED_HOSTS=app.preqly.com,www.app.preqly.com,localhost,127.0.0.1
SECRET_KEY=django-insecure-CHANGE-THIS-TO-RANDOM-50-CHAR-STRING-for-production

# Optional: Database Engine Override
# Uncomment the line below to force PostgreSQL
# DB_ENGINE=django.db.backends.postgresql

